<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.stormchaserslive"
       name="LiveStreaming Storm Chasers"
       version="3.2"
       provider-name="">
  <requires>
    <import addon="xbmc.python" version="2.24.0"/>
    <import addon="script.module.requests"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Live Storm Chaser Streams</summary>
    <language>en</language>
    <description lang="en">This addon brings you live streams from storm chasers across America to your kodi so you can watch on a big screen</description>
     <platform>all</platform>
  </extension>
</addon>
